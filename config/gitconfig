[user]
  name = Kyle Stevens
  email = kstevens715@gmail.com
[core]
  editor = nvim
  excludesfile = ~/.gitignore
[push]
  default = current
[github]
  user = kstevens715
[web]
  browser = firefox
[alias]
  refactor = !git add -A && git commit -m "refactor"
  aa = add --all --intent-to-add
  b = blame -wM
  c = commit -v
  co = checkout
  dm = diff master...
  f = fetch
  s = status
  d = diff --color
  lol = log --graph --oneline --decorate
  poh = push origin HEAD
  r = reflog --date=iso
  branches = branch --sort=-committerdate
[color]
  ui = auto
[init]
  defaultBranch = master
[merge]
  tool = vimdiff
  conflictstyle = diff3
[mergetool]
  keepBackup = false
  prompt = false
[mergetool "vimdiff"]
  cmd = "nvim  -d $MERGED $LOCAL $BASE $REMOTE -c 'wincmd J | wincmd ='"
